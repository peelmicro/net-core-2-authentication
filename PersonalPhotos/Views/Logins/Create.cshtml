@model PersonalPhotos.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Sign up!</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post" asp-controller="Logins" asp-action="Create">
                <p>
                    Please sign up to use your Personal Photos portal.
                </p>

                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" id="email" asp-for="Email" />
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" asp-for="Password" />
                </div>
                <input type="submit" class="btn btn-default" value="Sign Up!" />
            </form>
        </div>
    </div>
</div>

