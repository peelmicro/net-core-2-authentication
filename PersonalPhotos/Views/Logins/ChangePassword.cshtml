@model PersonalPhotos.ViewModels.ChangePasswordViewModel
@{
  ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="col-md-8">
            Email Address: @Model.EmailAddress
            <form method="post" asp-controller="Logins" asp-action="ChangePassword">
                <input type="hidden" asp-for="EmailAddress" />
                <input type="hidden" asp-for="Token" />                
                <div class="form-group">
                    <label for="password" asp-for="Password">New Password:</label>
                    <input type="password" id="password" asp-for="Password" />
                </div>
                <input type="submit" value="Reset Password"/>
            </form>
        </div>
    </div>
</div>
