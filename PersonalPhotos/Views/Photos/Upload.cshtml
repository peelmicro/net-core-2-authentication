@model PersonalPhotos.ViewModels.PhotoUploadViewModel
@{
    ViewData["Title"] = "Upload Photo";
}

<h2>Upload Your Photo!</h2>


<div class="container">
    <div class="row">
        <div class="col-md-10">
            @Html.ValidationSummary()

            <form method="post" asp-controller="Photos" asp-action="Upload" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Choose a file:</label>
                    <input type="file" id="file" name="File" asp-for="File" />
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" id="description" asp-for="Description"  class="form-control"/>
                </div>
                <input type="submit" value="Submit" class="btn btn-info"/>
                <a asp-action="Display" class="btn btn-danger">Cancel</a>
            </form>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-2">
            
        </div>
    </div>
</div>
